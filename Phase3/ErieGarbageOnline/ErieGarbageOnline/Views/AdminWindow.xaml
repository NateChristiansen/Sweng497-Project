<Window x:Class="ErieGarbageOnline.Views.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Admin Control Panel" Height="447.4" Width="590">
    <Grid Margin="-4,31,4,-31.4">
        <TabControl HorizontalAlignment="Left" Height="335" Margin="10,19,0,0" VerticalAlignment="Top" Width="574">
            <TabItem Header="Create Admin">
                <Grid Background="#FFE5E5E5">
                    <Label Content="Email:" HorizontalAlignment="Left" Margin="0,35,0,0" VerticalAlignment="Top"/>
                    <TextBox Name="EmailBox" HorizontalAlignment="Left" Height="23" Margin="68,39,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
                    <Label Content="Password:" HorizontalAlignment="Left" Margin="0,83,0,0" VerticalAlignment="Top"/>
                    <PasswordBox Name="PasswordBox" HorizontalAlignment="Left" Height="23" Margin="68,84,0,0" VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.547,4.771"/>
                    <Label Content="First Name:" HorizontalAlignment="Left" Margin="0,124,0,0" VerticalAlignment="Top"/>
                    <TextBox Name="FirstNameBox" HorizontalAlignment="Left" Height="23" Margin="68,125,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.547,4.771"/>
                    <Label Content="Last Name:" HorizontalAlignment="Left" Margin="0,163,0,0" VerticalAlignment="Top"/>
                    <TextBox Name="LastNameBox" HorizontalAlignment="Left" Height="23" Margin="68,165,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.547,4.771"/>
                    <Button Name="SubmitAdminButton" Content="Submit" HorizontalAlignment="Left" Margin="87,218,0,0" VerticalAlignment="Top" Width="75" Click="SubmitAdminButton_Click"/>
                </Grid>
            </TabItem>
            <TabItem Header="View Messages">
                <Grid Background="#FFE5E5E5">
                    <DataGrid x:Name="dataGrid" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="287" Width="548"/>
                </Grid>
            </TabItem>
            <TabItem Header="Email Customer">
                <Grid Background="#FFE5E5E5">
                    <Label Content="To:" HorizontalAlignment="Left" Margin="25,28,0,0" VerticalAlignment="Top"/>
                    <Label Content="Subject:" HorizontalAlignment="Left" Margin="27,66,0,0" VerticalAlignment="Top"/>
                    <TextBox Name="SubjectBox" HorizontalAlignment="Left" Height="23" Margin="98,70,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="461"/>
                    <TextBox Name="BodyBox" HorizontalAlignment="Left" Height="174" Margin="0,98,0,0" VerticalAlignment="Top" Width="559" AcceptsReturn="True" TextWrapping="NoWrap" />
                    <Button Name="SendEmailButton" Content="Send" HorizontalAlignment="Left" Margin="447,279,0,0" VerticalAlignment="Top" Width="75" Click="SendEmailButton_Click"/>
                    <ComboBox Name="ReceiverBox" HorizontalAlignment="Left" Margin="98,31,0,0" VerticalAlignment="Top" Width="461"/>
                </Grid>
            </TabItem>
            <TabItem Header="Due Payments">
                <Grid Background="#FFE5E5E5">
                    <ListBox x:Name ="DuePaymentBox" HorizontalAlignment="Left" Height="262" Margin="9,18,0,0" VerticalAlignment="Top" Width="216"/>
                </Grid>
            </TabItem>
        </TabControl>
        <Label Name="WelcomeLabel" Content="Welcome [name]" HorizontalAlignment="Left" Margin="445,-20,0,0" VerticalAlignment="Top"/>
        <Button Name ="LogoutButton" Content="Logout" HorizontalAlignment="Left" Margin="458,6,0,0" VerticalAlignment="Top" Width="75" Click="LogoutButton_Click"/>

    </Grid>
</Window>

