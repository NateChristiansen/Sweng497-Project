<Window x:Class="ErieGarbageOnline.Views.Customer.ViewBill"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ErieGarbageOnline.Views.Customer"
        mc:Ignorable="d"
        Title="ViewBill" Height="300" Width="300">
    <Grid>
        <Button x:Name="PayBillButton" Content="Pay Bill" HorizontalAlignment="Left" Margin="10,242,0,0" VerticalAlignment="Top" Width="75" Click="PayBillButton_Click"/>
        <Button x:Name="CacnelButton" Content="Cancel" HorizontalAlignment="Left" Margin="210,242,0,0" VerticalAlignment="Top" Width="75" Click="CacnelButton_Click"/>
        <Label Content="Date of Bill" HorizontalAlignment="Left" Margin="47,78,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="DueDateBox" HorizontalAlignment="Left" Height="23" Margin="129,81,0,0" IsEnabled="False" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="label" Content="Amount Due" HorizontalAlignment="Left" Margin="47,109,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="AmountDueBox" HorizontalAlignment="Left" Height="23" Margin="129,112,0,0" TextWrapping="Wrap" Text="" IsEnabled="False" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
